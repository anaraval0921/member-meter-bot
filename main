from keep_alive import keep_alive
import discord
import os
from discord.ext import commands


intents = discord.Intents.all()
intents.members = True

client = commands.Bot(command_prefix=',', intents=intents)

@client.event
async def on_ready():
    print("I'm in")
    print(client.user)

@client.event
async def on_member_join(member):
  guild = member.guild
  member_count = len(guild.members)
  if member_count == 100:
    category_name = "Important Information"
    channel_name = "announcements"
    category = discord.utils.get(guild.categories, name=category_name)
    channel = discord.utils.get(category.text_channels, name=channel_name)
    
    if channel:
      await channel.send(f"YayðŸŽ‰! We have reached {member_count} members! Thank you all for joining and looking forward to connecting with all of you!ðŸŽ‰ ")
      print(f"Welcome {member.mention} to {member_count}")

keep_alive()
my_secret = os.environ['member_secret']
client.run(my_secret)
